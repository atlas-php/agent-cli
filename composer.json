{
    "name": "atlas-php/agent-cli",
    "description": "Laravel Artisan tooling for running Codex coding agent sessions with streaming and logging.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "symfony/process": "^6.3|^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^8.13 || ^9.0",
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Atlas\\Agent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Atlas\\Agent\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Atlas\\Agent\\Providers\\AgentCliServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "vendor/bin/pint",
        "test": "phpunit",
        "analyse": "PHPSTAN_DISABLE_PARALLEL=1 vendor/bin/phpstan analyse"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
